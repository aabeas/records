{{#validationError}}
  <strong>We could not save your album. Review your information and try again.</strong>
{{/validationError}}

<div class="">
  <label for="title">Title</label>
  <input type="text" name="title" value="{{album.title}}">
  {{#validationError.errors.title}}
    An album title is required!
  {{/validationError.errors.title}}
</div>

<div class="">
  <label for="artist">Artist</label>
  <input type="text" name="artist" value="{{album.artist}}">
  {{#validationError.errors.artist}}
    An artist name is required!
  {{/validationError.errors.artist}}
</div>

<div class="">
  <label for="coverImgUrl">Image URL</label>
  <input type="text" name="coverImgUrl" value="{{album.coverImgUrl}}">
  {{#validationError.errors.coverImgUrl}}
    A cover image URL is required!
  {{/validationError.errors.coverImgUrl}}
</div>

<div class="">
  <label for="genre">Genre</label>
  <input type="text" name="genre" value="{{album.genre}}">
  {{#validationError.errors.genre}}
    A genre is required!
  {{/validationError.errors.genre}}
</div>

<div class="">
  <label for="link">Link</label>
  <input type="text" name="link" value="{{album.link}}">
  {{#validationError.errors.link}}
    A link is required!
  {{/validationError.errors.link}}
</div>

<div class="">
  <label for="year">Year</label>
  <select class="" name="year">
    <option value="">Select Year</option>
    {{#years}}
      <option value="{{year}}" {{#selected}}selected{{/selected}}>{{year}}</option>
    {{/years}}
  </select>
  {{#validationError.errors.year}}
    The year is required!
  {{/validationError.errors.year}}
</div>

<div class="">
  <input type="submit" name="" value="Save Album">
</div>
